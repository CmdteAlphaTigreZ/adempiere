<%@ taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" %><%@ taglib uri="http://www.zkoss.org/dsp/zk/core" prefix="z" %><%@ taglib uri="http://www.zkoss.org/dsp/web/theme" prefix="t" %>.z-button{font-family:"Helvetica Neue",Helvetica,Arial,sans-serif;font-size:14px;font-weight:normal;font-style:normal;color:#000;min-height:30px;border:1px solid #a9a9a9;${t:borderRadius('5px') };padding:3px 12px;line-height:16px;${t:gradient('ver','#e1fed8 0%; #b8fea1 100%') };text-shadow:0 1px #fff;cursor:pointer;white-space:nowrap}.z-button:hover{border-color:#e1fed8;background:#e1fed8}.z-button:focus{color:#000;border-color:#b8fea1;${t:gradient('ver','#e1fed8 0%; #b8fea1 100%') };${t:boxShadow('inset 0 0 2px #0CBCFF') }}.z-button:active{border-color:#b8fea1;background:#e1fed8}.z-button[disabled]{border-color:#a9a9a9;${t:gradient('ver','#e1fed8 0%; #b8fea1 100%') };opacity:.6;filter:alpha(opacity=60);${t:boxShadow('none') };cursor:default}.z-button img{vertical-align:middle}.ie8 .z-button{min-height:22px}